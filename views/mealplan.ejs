<div class="form-group">
    <label>Date</label>
    <input type="Date" class="form-control" name="date">
</div>
<div class="form-group">
    <label>Meal</label>
    <% meals.forEach((meal)=>{ %>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="meal" value = <%= meal._id %> id="flexRadio">
            <label class="form-check-label" for="flexRadio">
                <%= meal.name %>
            </label>
        </div>
    <% }) %>
</div>